---
import PageLayout from '../../layouts/PageLayout.astro';
import PageMeta from '../../components/PageMeta.astro';
import PageHeader from 'src/components/PageHeader.astro';
import ArticleList from 'src/components/ArticleList.astro';
import { readAll } from '../../lib/markdoc/read';
import { blog } from '../../lib/markdoc/frontmatter.schema';

export async function getStaticPaths() {
  const posts = await readAll({
    directory: 'blog',
    frontmatterSchema: blog,
  });

  // We don't want to generate pages for posts that are in draft status
  const filteredPosts = posts.filter((p) => p.frontmatter.draft !== true);

  const uniqueTags = [...new Set(posts.map((p) => p.frontmatter.tags).flat())];

  return uniqueTags.map((tag) => {
    return { params: { tag: tag.toLocaleLowerCase() } };
  });
}

const { tag = '' } = Astro.params;
---

<PageLayout>
  <PageMeta
    title="Helpful blog articles about WordPress, Jamstack & frontend development | Rob Kendal, freelance developer"
    description="Read articles from Rob Kendal about WordPress, Jamstack, frontend development and JavaScript"
    slot="meta"
  />
  <section slot="main">
    <PageHeader classes="mb-16">
      {`All articles about ${tag}`}
    </PageHeader>
    <ArticleList count={999} relatedPostTags={[tag]} showBlurb />
  </section>
</PageLayout>

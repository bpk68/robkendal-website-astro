---
import { MarkdocRenderer } from 'astro-markdoc-renderer';
import type { Content } from 'astro-markdoc-renderer';
import YouTubeEmbed from './YouTubeEmbed.astro';
import TweetEmbed from './TweetEmbed.astro';
import CodePenEmbed from './CodePenEmbed.astro';
import GitHubGistEmbed from './GitHubGistEmbed.astro';
import ShikiCodeBlock from './ShikiCodeBlock.astro';
import Heading from './Heading.astro';
import AppLink from './AppLink.astro';
import Blockquote from './Blockquote.astro';
import IFrameEmbed from './IFrameEmbed.astro';

type Props = {
  content: Content;
};

const { content } = Astro.props;

const components = {
  Heading: {
    Component: Heading,
    props: {},
  },
  ShikiCodeBlock: {
    Component: ShikiCodeBlock,
    props: {},
  },
  YouTubeEmbed: {
    Component: YouTubeEmbed,
    props: {},
  },
  TweetEmbed: {
    Component: TweetEmbed,
    props: {},
  },
  CodePenEmbed: {
    Component: CodePenEmbed,
    props: {},
  },
  GitHubGistEmbed: {
    Component: GitHubGistEmbed,
    props: {},
  },
  AppLink: {
    Component: AppLink,
    props: {},
  },
  Blockquote: {
    Component: Blockquote,
    props: {},
  },
  IFrameEmbed: {
    Component: IFrameEmbed,
    props: {},
  },
};
---

<MarkdocRenderer content={content} components={components} />
